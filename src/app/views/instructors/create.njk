{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/3465564/500x500) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Novo Instrutor</h3>

            {% include 'instructors/fields.njk' %}

            <script>
                const formDelete = document.querySelector(".card")
                formDelete.addEventListener("submit", function (event) {
                    const confirmar = confirm("Deseja criar esse instrutor?")
                    if (!confirmar) {
                        event.preventDefault()
                    }
                })
            </script>
        </section>
    </form>
{% endblock content %}